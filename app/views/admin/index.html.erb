<h3>Users</h3>
<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
      <td>
        <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
        <%= render user %>
      </td>
      <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h3>Cohorts</h3>

<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>First student</th>
    <th>First project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cohorts.each do |cohort| %>
  <tr>
    <td><%= cohort.name %></td>
    <td><%= cohort.users.first.name unless cohort.users.first.nil? %></td>
    <td><%= cohort.projects.first.name unless cohort.projects.first.nil? %></td>
    <td><%= link_to 'Show', cohort, :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_cohort_path(cohort), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini' %></td>
  </tr>
<% end %>
</table>

