<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% unless @project.image_url.blank? %><%= image_tag @project.image_url, :class => "img-project" %><br><br><% end %>
    <%= f.input :image_url, as: :file, label: "Project picture" %>
    <%= f.input :name %>
    <%= f.input :about, input_html: { rows: 8, class: "full-width" } %>
    <%= f.input :link_url, label: "Link" %>
    <%= f.association :users, as: :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
